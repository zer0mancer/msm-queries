<h1>Actor <%= @the_actor.id %> details</h1>

<a href="/actors">Go back  </a>

<hr>

<dl>
  <dt>Name:</dt>
    <dd><%= @the_actor.name %></dd>

      <dt>DOB:</dt>
    <dd><%= @the_actor.dob %></dd>

      <dt>Bio:</dt>
    <dd><%= @the_actor.bio %></dd>

  <dt>Image</dt>
    <dd><img src="<%= @the_actor.image%>" width="250" alt="image of director"></dd>

          <dt>Created at:</dt>
    <dd><%= @the_actor.created_at %></dd>

          <dt>Updated at:</dt>
    <dd><%= @the_actor.updated_at %></dd>

    
</dl>

<h3>Filmography</h3>

<% matching_movies = Movie.where({:actor_id => @the_actor.id})%>

<table border="3">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>


  <% matching_movies.each do |a_movie| %>
    
    <tr>
      <td><%= a_movie.id %> </td>
      <td> <img src="<%= a_movie.image %>" alt="movie poster" width="300"> </td>
      <td><%= a_movie.title %> </td>
      <td><%= a_movie.year %> </td>
      <td><%= @the_director.name %> </td>
      <td> <a href="/movies/<%= a_movie.id %>">Movie Details</a> </td>
  </tr>

  <% end %>




</table>
